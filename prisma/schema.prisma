generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["dataProxy"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String?  @unique
  image     String?
  role      Role     @default(USER)
  collaborator Collaborator? 
  reminders Reminder[]
}

model Customer {
  id       String    @id @default(uuid())
  email    String?   @unique
  phone    String?
  name     String?
  lastName String?
  status   Status    @default(ACTIVE)
  logo     String?
  notes    String?
  username String?
  address  String?
  projects Project[]
}

model Project {
  id            String         @id @default(uuid())
  name          String
  location      String?
  startDate     DateTime       @default(now())
  endDate       DateTime?
  description   String?
  address       String?
  customer      Customer?      @relation(fields: [id], references: [id])
  collaborators Collaborator[]
  type          ProjectType?    @relation(fields: [typeId], references: [id])
  typeId        String         
  documents     Document[]
  notes         Note[]
  tasks         Task[] 

}

model Task {
  id             String        @id @default(uuid())
  status          String
  type           TaskType      @relation(fields: [typeId], references: [id])
  typeId         String        @unique
  project         Project @relation(fields: [projectId], references: [id])
  projectId       String
}

model ProjectType {
  id      String    @id @default(uuid())
  type    ProjectTypeEnum
  Project Project[]
}

model TaskType {
  id   String @id @default(uuid())
  name String
  Task Task[]
}

model CollaboratorType {
  id           String         @id @default(uuid())
  type         CollaboratorTypeEnum
  Collaborator Collaborator[]
}

model Collaborator {
  id       String           @id @default(uuid())
  name     String
  lastName String?
  avatar   String?
  projects Project[]
  type     CollaboratorType @relation(fields: [typeId], references: [id])
  typeId   String    
  user      User? @relation(fields: [userId], references: [id])
  userId    String?  @unique // relation scalar field (used in the `@relation` attribute above)
  reminders Reminder[]
}

model Document {
  id       String  @id @default(uuid())
  number    String
  link      String
  project   Project @relation(fields: [projectId], references: [id])
  projectId String
}

model Note {
  id       String  @id @default(uuid())
  date    String
  note      String
  project   Project @relation(fields: [projectId], references: [id])
  projectId String
}

model Reminder {
  id       String  @id @default(uuid())
  title    String
  description String
  date     DateTime
  status    String
  assignee  Collaborator @relation(fields: [assigneeId], references: [id])
  assigneeId   String  @unique // relation scalar field (used in the `@relation` attribute above)
  createdBy    User? @relation(fields: [createdById], references: [id])
  createdById    String?  @unique // relation scalar field (used in the `@relation` attribute above)
}

enum Role {
  USER
  ADMIN
}

 enum CollaboratorTypeEnum {
  RESPONSIBLE
  ASSISTANT
  ON_FIELD
}

enum ProjectTypeEnum {
  REPORTES_CURVAS
  PLANO_CATASTRO
}

enum Status {
  ACTIVE
  INACTIVE
}

enum ReminderStatus {
  PENDING
  COMPLETED
  CANCELED
}
